{
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib":["es2017", "dom"],
    "target": "ES2016",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
